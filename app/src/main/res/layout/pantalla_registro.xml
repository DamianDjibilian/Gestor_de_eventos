<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PantallaRegistro"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="CREAR UNA CUENTA"
        android:textColor="@color/timber"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="serif"
        />


    <EditText
        android:id="@+id/RegUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Ingrese su e-mail"
        android:textColorHint="@color/timber"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:maxLength="40"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:backgroundTint="@color/timber"
        />

    <EditText
        android:id="@+id/RegPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Password"
        android:textColorHint="@color/timber"
        android:layout_margin="10dp"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:backgroundTint="@color/timber"
        />

    <EditText
        android:id="@+id/RegConfPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Confirmar password"
        android:textColorHint="@color/timber"
        android:layout_margin="10dp"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:backgroundTint="@color/timber"
        />

    <Button
        android:id="@+id/BtnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/maize"
        android:textColor="#000000"
        android:text="CREAR CUENTA"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        />
    <Button
        android:id="@+id/BtnRegCancelar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/maize"
        android:textColor="#000000"
        android:text="CANCELAR"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        />
</LinearLayout>